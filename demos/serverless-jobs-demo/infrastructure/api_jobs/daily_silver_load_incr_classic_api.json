{
  "name": "daily_silver_load_incr_classic_api",
  "tasks": [
    {
      "task_key": "load_claims_silver",
      "notebook_task": {
        "notebook_path": "/Workspace/Shared/hls-demos/demos/serverless-jobs-demo/src/classic/silver/load_fact_claims",
        "source": "WORKSPACE",
        "base_parameters": {
          "load_type": "full"
        }
      },
      "job_cluster_key": "classic_single_node"
    },
    {
      "task_key": "load_medications_silver",
      "notebook_task": {
        "notebook_path": "/Workspace/Shared/hls-demos/demos/serverless-jobs-demo/src/classic/silver/load_fact_medications",
        "source": "WORKSPACE",
        "base_parameters": {
          "load_type": "full"
        }
      },
      "job_cluster_key": "classic_single_node"
    },
    {
      "task_key": "load_patient_encounters_silver",
      "notebook_task": {
        "notebook_path": "/Workspace/Shared/hls-demos/demos/serverless-jobs-demo/src/classic/silver/load_fact_patient_encounters",
        "source": "WORKSPACE",
        "base_parameters": {
          "load_type": "full"
        }
      },
      "job_cluster_key": "classic_single_node"
    },
    {
      "task_key": "load_procedures_silver",
      "notebook_task": {
        "notebook_path": "/Workspace/Shared/hls-demos/demos/serverless-jobs-demo/src/classic/silver/load_fact_procedures",
        "source": "WORKSPACE",
        "base_parameters": {
          "load_type": "full"
        }
      },
      "job_cluster_key": "classic_single_node"
    },
    {
      "task_key": "load_member_monthly_snapshot_gold",
      "depends_on": [
        {
          "task_key": "load_claims_silver"
        },
        {
          "task_key": "load_medications_silver"
        },
        {
          "task_key": "load_patient_encounters_silver"
        },
        {
          "task_key": "load_procedures_silver"
        }
      ],
      "spark_python_task": {
        "python_file": "/Workspace/Shared/hls-demos/demos/serverless-jobs-demo/src/classic/gold/load_fact_member_monthly_snapshot.py",
        "source": "WORKSPACE"
      },
      "job_cluster_key": "classic_single_node"
    }
  ],
  "job_clusters": [
    {
      "job_cluster_key": "classic_single_node",
      "new_cluster": {
        "spark_version": "13.3.x-scala2.12",
        "node_type_id": "Standard_DS3_v2",
        "num_workers": 0,
        "spark_conf": {
          "spark.databricks.cluster.profile": "singleNode",
          "spark.master": "local[*]"
        },
        "spark_env_vars": {
          "catalog_name": "%CATALOG_NAME%"
        },
        "data_security_mode": "SINGLE_USER",
        "runtime_engine": "STANDARD",
        "custom_tags": {
          "ResourceClass": "SingleNode"
        },
        "init_scripts": [
          {
            "volumes": {
              "destination": "/Volumes/%CATALOG_NAME%/synthea/admin_configs/install_faker_wheel.sh"
            }
          }
        ]
      }
    }
  ],
  "schedule": {
    "quartz_cron_expression": "0 30 2 * * ?",
    "timezone_id": "UTC",
    "pause_status": "PAUSED"
  },
  "max_concurrent_runs": 1,
  "format": "MULTI_TASK"
}

